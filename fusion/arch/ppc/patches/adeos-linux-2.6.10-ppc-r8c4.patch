+int adeos_tune_timer (unsigned long ns, int flags)
+
+{
+    unsigned long x, ticks;
+
+    if (flags & ADEOS_RESET_TIMER)
+	ticks = tb_ticks_per_jiffy;
+    else
+	{
+	ticks = ns * tb_ticks_per_jiffy / (1000000000 / HZ);
