#! /bin/bash

staging=${DESTDIR}
prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="@libdir@"
datadir="@datadir@"
pkgdatadir="${datadir}/@PACKAGE@"
includedir="@includedir@"

RTAI_VERSION="@PACKAGE_VERSION@"
RTAI_PREFIX="${staging}${prefix}"
RTAI_CC="@CC@"
RTAI_TARGET_ARCH="@RTAI_TARGET_ARCH@"
RTAI_TARGET_SUBARCH="@RTAI_TARGET_SUBARCH@"
RTAI_CONFIG="${staging}${pkgdatadir}/config-fusion-${RTAI_VERSION}"
RTAI_LINUX_DIR="@RTAI_LINUX_DIR@"
RTAI_LINUX_VERSION="@RTAI_LINUX_VERSION@"
RTAI_KERNEL_CFLAGS="-I. -I${staging}${includedir} @RTAI_KMOD_APP_CFLAGS@ @RTAI_FP_CFLAGS@"
RTAI_MODULE_DIR="${staging}@RTAI_MODULE_DIR@"
RTAI_SYMBOL_DIR="${staging}@RTAI_SYMBOL_DIR@"
RTAI_FUSION_CFLAGS="-I. -I${staging}${includedir} @RTAI_USER_APP_CFLAGS@"
RTAI_FUSION_LDFLAGS="-L${staging}${libdir} -lpthread"
RTAI_POSIX_CFLAGS="-I. -I${staging}${includedir} -I${staging}${includedir}/posix @RTAI_USER_APP_CFLAGS@"
RTAI_POSIX_LDFLAGS="-L${staging}${libdir} -lpthread_rt -lpthread -lrt"
RTAI_POSIX_WRAPPERS="${staging}${libdir}/posix.wrappers"
RTAI_UVM_CFLAGS="-I. -I${staging}${includedir} @RTAI_USER_APP_CFLAGS@ -D__RTAI_UVM__"
RTAI_UVM_LDFLAGS="-u__fusion_skin_init -L${staging}${libdir} -luvm -lnucleus -lpthread"
RTAI_LIBRARY_DIR="${staging}${libdir}"
CROSS_COMPILE="@CROSS_COMPILE@"

unset prefix exec_prefix libdir datadir pkgdatadir includedir

usage ()
{
cat <<EOF
Usage rtai-config OPTIONS
Options :
        --help
        --version
        --cc
        --cross-compile
        --arch
        --subarch
        --prefix
        --config
        --module-cflags
        --module-cxxflags
        --fusion-cflags
        --fusion-ldflags
        --posix-cflags
        --posix-ldflags
        --uvm-cflags
        --uvm-ldflags
        --linux-dir
        --linux-version
        --module-dir
        --symbol-dir
        --library-dir
EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
    case "$1" in
        --version)
            echo ${RTAI_VERSION}-fusion
            ;;
        --cc)
            echo $RTAI_CC
            ;;
        --cross-compile)
            echo $CROSS_COMPILE
            ;;
        --arch)
            echo $RTAI_TARGET_ARCH
            ;;
        --subarch)
            echo $RTAI_TARGET_SUBARCH
            ;;
        --prefix)
            echo $RTAI_PREFIX
            ;;
        --config)
            echo $RTAI_CONFIG
            ;;
        --mod*-cflags|--kernel-cflags)
            echo $RTAI_KERNEL_CFLAGS
            ;;
        --fusion-cflags)
            echo $RTAI_FUSION_CFLAGS
            ;;
        --fusion-ldflags)
            echo $RTAI_FUSION_LDFLAGS
            ;;
        --posix-cflags)
            echo $RTAI_POSIX_CFLAGS
            ;;
        --posix-ldflags)
            if test \! -r $RTAI_POSIX_WRAPPERS; then
	       echo "POSIX support is not available" >&2
	       exit 1
	    fi
	    wrappers=`cat $RTAI_POSIX_WRAPPERS | \
	    while read symbol; do \
                echo -n "-Wl,--wrap -Wl,$symbol " ; \
	     done`
            echo "$wrappers $RTAI_POSIX_LDFLAGS"
            ;;
        --uvm-cflags)
            echo $RTAI_UVM_CFLAGS
            ;;
        --uvm-ldflags)
            echo $RTAI_UVM_LDFLAGS
            ;;
        --mod*-dir)
            echo $RTAI_MODULE_DIR
            ;;
        --sym*-dir)
            echo $RTAI_SYMBOL_DIR
            ;;
        --lib*-dir|--libdir|--user-libdir)
            echo $RTAI_LIBRARY_DIR
            ;;
        --linux-dir|--linux)
            echo $RTAI_LINUX_DIR
            ;;
        --linux-ver*)
            echo $RTAI_LINUX_VERSION
            ;;
        --help)
            usage 0 1>&2
            ;;
        *)
         usage 1 1>&2
         ;;
    esac
    shift
done
