moduledir = $(DESTDIR)@RTAI_MODULE_DIR@
includedir = $(prefix)/include/posix

modext = @RTAI_MODULE_EXT@

CROSS_COMPILE = @CROSS_COMPILE@

libmodule_SRC = \
	module.c \
	sched.c \
	thread_attr.c \
	thread.c \
	mutex_attr.c \
	mutex.c \
	cond_attr.c \
	cond.c \
	sem.c \
	cancel.c \
	once.c \
	signal.c \
	tsd.c \
	clock.c \
	mq.c

include_HEADERS = \
	posix.h

noinst_HEADERS = \
	cancel.h \
	cond.h \
	internal.h \
	jhash.h \
	mutex.h \
	mq.h \
	sem.h \
	signal.h \
	thread.h \
	tsd.h

if CONFIG_RTAI_OPT_FUSION
libmodule_SRC += syscall.c
noinst_HEADERS += syscall.h
endif
distfiles = syscall.c syscall.h

rtai_posix$(modext): @RTAI_KBUILD_ENV@
rtai_posix$(modext): $(libmodule_SRC) FORCE
	@RTAI_KBUILD_TOP@ \
	@RTAI_KBUILD_CMD@ rtai_extradef="@RTAI_KMOD_CFLAGS@" \
	@RTAI_KBUILD_BOTTOM@

clean-local:
	@RTAI_KBUILD_CLEAN@

distclean-local:
	@RTAI_KBUILD_DISTCLEAN@

all-local: rtai_posix$(modext)
if CONFIG_RTAI_OLD_FASHIONED_BUILD
	$(mkinstalldirs) $(top_srcdir)/modules
	$(INSTALL_DATA) $^ $(top_srcdir)/modules
endif

install-exec-local: rtai_posix$(modext)
	$(mkinstalldirs) $(moduledir)
	$(INSTALL_DATA) $< $(moduledir)

uninstall-local:
	$(RM) $(moduledir)/rtai_posix$(modext)

.PHONY: FORCE

EXTRA_DIST = $(distfiles) $(libmodule_SRC) doc Makefile.kbuild Kconfig demos

if CONFIG_RTAI_OPT_FUSION
SUBDIRS = lib
endif
